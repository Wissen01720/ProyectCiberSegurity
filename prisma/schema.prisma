generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  mfaEnabled    Boolean   @default(false)
  mfaSecret     String?
  securityLogs  SecurityLog[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
}

model SecurityLog {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  eventType   String    // LOGIN_ATTEMPT, PHISHING_DETECTED, CRYPTO_WARNING
  details     String
  severity    String    // LOW, MEDIUM, HIGH
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([eventType])
}

model SecurityScenario {
  id          String    @id @default(cuid())
  type        String    // AUTH, CRYPTO, PHISHING
  title       String
  description String
  options     Json      // JSON array of options
  feedback    Json      // JSON object of feedback
  createdAt   DateTime  @default(now())

  @@index([type])
}